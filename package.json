{
  "name": "portfolio-tracker",
  "version": "1.0.0",
  "description": "A comprehensive portfolio tracking application with dividend tracking, NAV analysis, and multi-portfolio management",
  "author": "Vadim Snitkovsky",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vadim-snitkovsky/portfolio-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/vadim-snitkovsky/portfolio-tracker/issues"
  },
  "homepage": "https://github.com/vadim-snitkovsky/portfolio-tracker#readme",
  "keywords": [
    "portfolio",
    "investment",
    "dividend",
    "stock-tracker",
    "finance",
    "react",
    "typescript",
    "vite"
  ],
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage --run",
    "test:ui": "vitest --ui",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
